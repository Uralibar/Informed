<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: "display: block; font-weight: bold;" %>
    <%= form.text_field :title, class: "form-control", size: 98 %>
  </div>

  <div class="form-group">
    <%= form.label :content, style: "display: block; font-weight: bold;" %>
    <%= form.rich_text_area :content, class: "form-control", rows: 10, cols: 100 %>
  </div>



  <div class="form-group">
    <%= form.submit "Save Post", class: "btn btn-primary" %>
  </div>
<% end %>
