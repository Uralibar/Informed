<% content_for :title, "Editing post" %>

<h1 class="page-title" style="text-align: center; color: #333; margin-bottom: 20px;">Editing Post</h1>

<div class="form-container" style="max-width: 55%; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: #f9f9f9;">
  <%= render "form", post: @post %>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "Show this post", @post, class: "btn btn-outline-primary btn-sm" %>
  <span>|</span>
  <%= link_to "Back to posts", posts_path, class: "btn btn-outline-secondary btn-sm" %>
</div>
