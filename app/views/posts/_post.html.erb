<div id="<%= dom_id post %>">
  <div class="card" style="width: 100%; max-width: 600px; margin: 20px auto; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="card-header" style="background-color: #f8f9fa; font-size: 1.25em; color: #333;">
      <strong>Title:</strong>
      <%= post.title %>
    </div>
    <div class="card-body" style="padding: 20px;">
      <p><strong>Content:</strong></p>
      <p><%= post.content %></p>
    </div>
  </div>
</div>
