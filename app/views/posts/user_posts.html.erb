<h1>Your Posts</h1>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>

      <!-- Edit button for the post -->
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning btn-sm' %> |

      <!-- Delete button for the post -->
      <%= button_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'btn btn-danger btn-sm' %>
    </div>
  <% end %>
<% else %>
  <p>You have no posts yet.</p>
<% end %>

<%= link_to 'Back to All Posts', posts_path %> <!-- Link to view all posts -->
