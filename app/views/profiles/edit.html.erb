<h1>Edit Your Profile</h1>

<%= form_for(@user, url: profile_path, method: :patch, html: { enctype: "multipart/form-data" }) do |f| %>
  <div class="form-group">
    <%= f.label :biography, "Biography" %>
    <%= f.text_area :biography, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.label :profile_picture, "Profile Picture" %>
    <%= f.file_field :profile_picture, class: 'form-control' %>
    <% if @user.profile_picture.attached? %>
      <p>Current profile picture:</p>
      <%= image_tag @user.profile_picture, size: "100x100", class: "img-thumbnail" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :banner, "Banner" %>
    <%= f.file_field :banner, class: 'form-control' %>
    <% if @user.banner.attached? %>
      <p>Current banner:</p>
      <%= image_tag @user.banner, size: "300x100", class: "img-thumbnail" %>
    <% end %>
  </div>

  <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Profile', user_profile_path(current_user), class: 'btn btn-secondary' %>
