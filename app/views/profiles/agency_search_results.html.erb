<div class="agency-user-search-container">
  <h1>Agency User Search Results</h1>

  <% if @agency_users.any? %>
    <% @agency_users.each do |user| %>
      <div class="user-item">
        <p><%= link_to user.username, user_profile_path(user), class: "btn btn-link" %></p>
        <p class="post-count">Number of posts: <%= user.posts.count %></p>
      </div>
    <% end %>
  <% else %>
    <p class="no-results">No matching agency users found.</p>
  <% end %>

  <div class="back-link">
    <%= link_to "Back to Home", root_path, class: "btn btn-primary" %>
  </div>
</div>
